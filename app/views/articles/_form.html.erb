<%=	form_for(@article,	html:	{multipart:	true})	do	|f|	%>
	<ul>
		<%	@article.errors.full_messages.each	do	|error|	%>
			<li><%=	error	%></li>
		<%	end	%>
	</ul>
	<p>
		<%=	f.label	:title	%><br	/>
		<%=	f.text_field	:title	%>
	</p>
	<p>
		<%=	f.label	:body	%><br	/>
		<%=	f.text_area	:body	%>
	</p>
	<p>
	<%=	f.label	:tag_list	%><br	/>
	<%=	f.text_field	:tag_list	%>
	</p>
	<p>
		<%	if	@article.picture.exists?	%>
			<%=	image_tag	@article.picture.url	%><br/>
		<%	end	%>
		<%=	f.label	:picture,	"Attach	a	New	Image"	%><br	/>
		<%=	f.file_field	:picture	%>
	</p>
	<p>
		<%=	f.submit	%>
	</p>
<%	end	%>